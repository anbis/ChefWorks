<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
<!-- TAGS -->
    <route method="GET" url="/V1/anbis_tags/:id">
        <service class="Anbis\ChefWorks\Api\TagsRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/anbis_tags">
        <service class="Anbis\ChefWorks\Api\TagsRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/anbis_tags">
        <service class="Anbis\ChefWorks\Api\TagsRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/anbis_tags">
        <service class="Anbis\ChefWorks\Api\TagsRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/anbis_tags/:id">
        <service class="Anbis\ChefWorks\Api\TagsRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

<!-- PROJECTS -->
    <route method="GET" url="/V1/anbis_projects/:id">
        <service class="Anbis\ChefWorks\Api\ProjectsRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/anbis_projects">
        <service class="Anbis\ChefWorks\Api\ProjectsRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/anbis_projects">
        <service class="Anbis\ChefWorks\Api\ProjectsRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/anbis_projects">
        <service class="Anbis\ChefWorks\Api\ProjectsRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/anbis_projects/:id">
        <service class="Anbis\ChefWorks\Api\ProjectsRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
